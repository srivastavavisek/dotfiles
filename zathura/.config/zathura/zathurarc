set adjust-open "width"
set pages-per-row 1
set scroll-page-aware true
set smooth-scroll true
set scroll-full-overlap 0.02
set scroll-step 50

set sandbox none

set zoom-min 10
set zoom-max 1000

set guioptions ""
set font "Inconsolata 15"

set default-bg "#FFFFFF"
set default-fg "#000000"

set statusbar-bg "#F0F0F0"
set statusbar-fg "#202020"

set inputbar-bg "#F0F0F0"
set inputbar-fg "#000000"

set notification-bg "#D0D0D0"
set notification-fg "#000000"

set notification-error-bg "#CC3333"
set notification-error-fg "#FFFFFF"

set notification-warning-bg "#CC3333"
set notification-warning-fg "#FFFFFF"

set highlight-color "#F4BF7566"
set highlight-active-color "#6A9FB566"

map p set recolor true
map P set recolor false
set recolor-lightcolor "#000000"
set recolor-darkcolor "#E0E0E0"
set recolor-reverse-video true
set recolor-keephue true

set render-loading false

map f follow

map F toggle_fullscreen
map [fullscreen] F toggle_fullscreen

map J zoom in
map K zoom out

map r reload
map q quit
